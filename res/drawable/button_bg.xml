<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/neon_red"/>
            <corners android:radius="10dp"/>
            <solid android:color="@color/neon_red"/>
            <gradient android:angle="90" android:startColor="@color/neon_red" android:endColor="@color/neon_red"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/pearl_white"/>
            <corners android:radius="10dp"/>
            <solid android:color="@color/pearl_white"/>
            <gradient android:angle="90" android:startColor="@color/pearl_white" android:endColor="@color/pearl_white"/>
        </shape>
    </item>
</selector>
