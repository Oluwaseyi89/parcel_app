<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/payment_bg"
    tools:context=".PaymentActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/payLeftGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="85dp" />

    <LinearLayout
        android:id="@+id/cardLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/payment_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toEndOf="@id/payLeftGuide"
        app:layout_constraintEnd_toStartOf="@id/payRightGuide"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/amountTag"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="45dp"
            android:gravity="bottom"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:text="Amount"/>

        <TextView
            android:id="@+id/shippingTag"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:text="Shipping Fee"/>

        <TextView
            android:id="@+id/totAmtTag"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:text="Total Amount"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="45dp"
            android:gravity="bottom"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:text="Card PAN"/>

        <EditText
            android:id="@+id/mCardNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:hint="5399-1893-8034-3534"
            android:gravity="center"
            android:background="@drawable/pay_text_input"
            android:ems="10"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/pay_cursor"
            android:textColorHint="@color/gray"
            android:textSize="24sp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:text="Expiry Date"/>

            <EditText
                android:id="@+id/mCardExpiry"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:hint="MM/YY"
                android:gravity="center"
                android:background="@drawable/pay_text_input"
                android:ems="10"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/pay_cursor"
                android:textColorHint="@color/gray"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginLeft="25dp"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:text="CVV"/>

            <EditText
                android:id="@+id/mCardCVV"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:hint="123"
                android:gravity="center"
                android:background="@drawable/pay_text_input"
                android:ems="10"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/pay_cursor"
                android:textColorHint="@color/gray"
                android:textSize="20sp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mPayButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/btn_pay_bg"
            android:shadowColor="@color/silver"
            android:text="Pay"
            android:textAllCaps="false"
            android:textColor="@drawable/pay_btn_txt"
            android:textSize="20sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/payRightGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="85dp" />
</androidx.constraintlayout.widget.ConstraintLayout>