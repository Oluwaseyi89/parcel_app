<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/uploadedProdImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="230dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/uploadedProdName"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="5dp"
                    android:text="Name:"
                    android:textSize="16sp"
                    android:gravity="center_vertical"/>

                <View
                    android:layout_width="300dp"
                    android:layout_marginTop="-12dp"
                    android:layout_height="1dp"
                    android:background="@color/neon_red"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    />

                <TextView
                    android:id="@+id/uploadedProdModel"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="5dp"
                    android:text="Model:"
                    android:textSize="16sp"
                    android:gravity="center_vertical"/>

                <View
                    android:layout_width="300dp"
                    android:layout_marginTop="-12dp"
                    android:layout_height="1dp"
                    android:background="@color/neon_red"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    />

                <EditText
                    android:id="@+id/uploadedProdPrice"
                    android:layout_width="300dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="5dp"
                    android:textSize="16sp"
                    android:background="@drawable/plain_text"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:hint="Price:"
                    android:gravity="center_vertical"
                    android:ems="10"
                    android:inputType="number" />

                <View
                    android:layout_width="300dp"
                    android:layout_marginTop="-12dp"
                    android:layout_height="1dp"
                    android:background="@color/neon_red"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    />


                <EditText
                    android:id="@+id/uploadedProdDiscount"
                    android:layout_width="300dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="5dp"
                    android:textSize="16sp"
                    android:background="@drawable/plain_text"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:hint="Discount:"
                    android:gravity="center_vertical"
                    android:ems="10"
                    android:inputType="number" />

                <View
                    android:layout_width="300dp"
                    android:layout_marginTop="-12dp"
                    android:layout_height="1dp"
                    android:background="@color/neon_red"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    />


                <EditText
                    android:id="@+id/uploadedProdQuantity"
                    android:layout_width="300dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="5dp"
                    android:textSize="16sp"
                    android:background="@drawable/plain_text"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:hint="Quantity:"
                    android:gravity="center_vertical"
                    android:ems="10"
                    android:inputType="number" />

                <View
                    android:layout_width="300dp"
                    android:layout_marginTop="-12dp"
                    android:layout_height="1dp"
                    android:background="@color/neon_red"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="12dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/updateProdBtn"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/update_prod_btn"
                    android:text="Update"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@drawable/btn_txt_neon"
                    android:textSize="16sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/deleteProdBtn"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/delete_prod_btn"
                    android:text="Delete"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@drawable/btn_txt_neon"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>